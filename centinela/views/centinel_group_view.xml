<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="centinel_group_form" model="ir.ui.view">
			<field name="name">Group</field>
			<field name="model">centinel.group</field>
			<field name="arch" type="xml">
				<form string="Subgroup">
					<sheet>
						<h1>
							<field name='name' placeholder='Group name' nolabel='1' required='1'/>
						</h1>
						<group>
							<notebook>
								<page string='Workshift'>
									<field name='workshift_ids' nolabel='1'/>
								</page>
							</notebook>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="centinel_group_tree" model="ir.ui.view">
			<field name="name">Group</field>
			<field name="model">centinel.group</field>
			<field name="arch" type="xml">
				<tree string="Groups">
					<field name='name'/>
				</tree>
			</field>
		</record>
		<record id="action_centinel_group" model="ir.actions.act_window">
			<field name="name">Group</field>
			<field name="res_model">centinel.group</field>
			<field name="view_type">form</field>
			<field name="view_mode">form, tree</field>
		</record>
	</data>
</odoo>