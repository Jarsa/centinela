<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="centinel_stand_form" model="ir.ui.view">
			<field name="name">Stand</field>
			<field name="model">centinel.stand</field>
			<field name="arch" type="xml">
				<form string="Stand">
					<sheet>
						<group>
							<h1>
								<field name="name" placeholder="Stand name" nolabel='1' required='1'/>
							</h1>
						</group>
						<notebook>
							<page string="Services">
								<field name="service_ids" nolabel="1"/>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>
		<record id="centinel_stand_tree" model="ir.ui.view">
			<field name="name">stand</field>
			<field name="model">centinel.stand</field>
			<field name="arch" type="xml">
				<tree string="Stand">
					<field name="name"/>
				</tree>
			</field>
		</record>
		<record id="action_centinel_stand" model="ir.actions.act_window">
			<field name="name">Stand</field>
			<field name="res_model">centinel.stand</field>
			<field name="view_type">form</field>
			<field name="view_mode">form, tree</field>
		</record>
	</data>
</odoo>