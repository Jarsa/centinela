<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id='centinel_vacancy_form' model='ir.ui.view'>
			<field name='name'>centinel.vacancy.form</field>
			<field name='model'>centinel.vacancy</field>
			<field name='arch' type='xml'>
				<form string='Vacancy'>
					<sheet>
						<h1>
							<label class='oe_inline' style="font-size:30px;" string='Vacancy - '/>
							<field name='name' readonly='1'/>
						</h1>
						<group>
							<label class='oe_inline' style='font-size:30px;' string='Activity:'/>
							<h2>
								<field name='activity_id' widget='selection'/>
							</h2>
						</group>
						<group>
							<group>								
								<field name='course_ids' widget="many2many_tags"/>
								<field name='test_ids' widget="many2many_tags"/>
							</group>
							<group>
								<field name='tool_ids' widget="many2many_tags"/>
								<field name='weapon_ids' widget="many2many_tags"/>
							</group>
						</group>
						<notebook>
							<page string='From'>
								<group colspan='4'>
									<field name='origin_address'/>
								</group>
								<group col='4' colspan='2'>
									<field name='origin_latitude'/>
									<field name='origin_longitude'/>
								</group>
							</page>
							<page string='To'>
								<group colspan='4'>
									<field name='destiny_address'/>
								</group>
								<group col='4' colspan='2'>
									<field name='destiny_latitude'/>
									<field name='destiny_longitude'/>
								</group>
							</page>
							<page string='When'>
								<group>
									<field name='origin_day'/>
								</group>
								<group>
									<field name='destiny_day'/>
								</group>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>
		<record id="centinel_vacancy_tree" model="ir.ui.view">
			<field name="name">Vacancy</field>
			<field name="model">centinel.vacancy</field>
			<field name="arch" type="xml">
				<tree string="Vacancy post">
					<field name='name' readonly='1'/>
					<field name='attachment'/>
					<field name='origin_address'/>
					<field name='origin_latitude'/>
					<field name='origin_day'/>
					<field name='destiny_address'/>
					<field name='destiny_latitude'/>
					<field name='destiny_day'/>
				</tree>
			</field>
		</record>
		<record id="action_centinel_vacancy" model="ir.actions.act_window">
			<field name="name">Vacancy</field>
			<field name="res_model">centinel.vacancy</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
	</data>
</odoo>